<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <link rel="stylesheet" href="/styles.css" />
  <title>Prestar</title>
</head>
<body>
  <p><a href="/libro/<%= libro.id %>">⬅ Volver al libro</a></p>

  <h1>Prestar: <%= libro.titulo %></h1>
  <p><strong>Autor:</strong> <%= libro.autor %></p>

  <form method="POST" action="/prestamo/nuevo">
    <input type="hidden" name="libro_id" value="<%= libro.id %>" />

    <label>Nombre prestatario</label><br/>
    <input name="nombre_prestatario" required /><br/><br/>

    <label>Fecha préstamo</label><br/>
    <input type="date" name="fecha_prestamo" required /><br/><br/>

    <label>Fecha devolución</label><br/>
    <input type="date" name="fecha_devolucion" required /><br/><br/>

    <button class="btn" type="submit">Confirmar préstamo</button>
  </form>
</body>
</html>