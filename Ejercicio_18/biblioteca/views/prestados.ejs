<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <link rel="stylesheet" href="/styles.css" />
  <title>Prestados</title>
</head>
<body>
  <h1>Libros prestados</h1>
  <p><a href="/">Volver</a></p>

  <table>
    <thead><tr><th>Título</th><th>Autor</th><th>Prestatario</th><th>Devolución</th></tr></thead>
    <tbody>
      <% rows.forEach(r => { %>
        <tr>
          <td><a href="/libro/<%= r.id %>"><%= r.titulo %></a></td>
          <td><%= r.autor %></td>
          <td>
            <a href="/prestamos/usuario?nombre=<%= encodeURIComponent(r.nombre_prestatario) %>">
              <%= r.nombre_prestatario %>
            </a>
          </td>
          <td><%= r.fecha_devolucion.toISOString().slice(0,10) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>