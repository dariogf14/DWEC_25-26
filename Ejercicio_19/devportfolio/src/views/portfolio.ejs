<h1><%= user.username %></h1>
<p>Email: <%= user.email %></p>
<p>Bio: <%= user.bio || "" %></p>

<h2>Social Links</h2>
<ul>
  <% links.forEach(l => { %>
    <li><a href="<%= l.url %>" target="_blank"><%= l.platform %></a></li>
  <% }) %>
</ul>

<h2>Projects</h2>
<% projects.forEach(p => { %>
  <div>
    <h3><%= p.title %></h3>
    <p><%= p.description || "" %></p>
    <% if (p.repo_url) { %><a href="<%= p.repo_url %>" target="_blank">Repo</a><% } %>
    <% if (p.live_url) { %> | <a href="<%= p.live_url %>" target="_blank">Live Demo</a><% } %>
  </div>
<% }) %>

<% if (isOwner) { %>
  <hr/>
  <a href="/dashboard">Gestionar mi Portafolio</a>
<% } %>